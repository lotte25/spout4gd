{
	"geode": "4.10.2",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "amiza.spout4gd",
	"name": "Spout4GD",
	"version": "v1.0.0",
	"developer": "Amiza",
	"description": "Captures the game screen using Spout2",
	"settings": {
		"stream-options": {
			"type": "title",
			"name": "Stream Options",
			"description": "Set output settings like FPS and (soon) fixed output resolution"
		},
		"output-fps": {
			"type": "int",
			"name": "Output FPS",
			"description": "Sets the Spout2 output framerate",
			"default": 60,
			"min": 0,
			"max": 360,
			"control": {
				"arrows": true,
				"arrow-step": 10,
				"big-arrows": true,
				"big-arrow-step": 60,
				"slider": true,
				"slider-step": 2,
				"input": true
			}
		}, 
		"cursor-options": {
			"type": "title",
			"name": "Fake cursor options"
		},
		"show-cursor": {
			"type": "bool",
			"name": "Enable cursor",
			"description": "Renders a fake cursor to the output.",
			"default": true
		},
		"cursor-scale": {
			"type": "float",
			"name": "Cursor scale",
			"default": 1,
			"min": 0,
			"max": 10,
			"control": {
				"slider": true
			}
		},
		"cursor-filter": {
			"type": "string",
			"name": "Cursor filter",
			"description": "Sets the filter to use when rendering the cursor",
			"default": "Linear",
			"match": "[A-Z][a-z]+",
			"filter": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ",
			"one-of": ["Nearest", "Linear"]
		}
	}
}
